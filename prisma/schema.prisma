model Trip {
  id                 Int       @id @default(autoincrement())
  originCountry      String
  destinationCountry String
  departureDate      DateTime?
  arrivalDate        DateTime?
  user               User      @relation(fields: [userId], references: [id])

  userId Int
}

model Order {
  id                 Int     @id @default(autoincrement())
  title              String  @default("Sample product")
  productUrl         String
  originCountry      String?
  destinationCountry String?
  price              Int     @default(0)
  description        String?
  category           String?
  User               User    @relation(fields: [userId], references: [id])
  userId             Int
  imageUrl           String?
}

model Sale {
  id                 Int     @id @default(autoincrement())
  title              String  @default("Sample product")
  productUrl         String
  originCountry      String
  destinationCountry String
  price              Int     @default(0)
  description        String?
  category           String?
  User               User    @relation(fields: [userId], references: [id])
  userId             Int
}

model Paymentmethod {
  id            Int    @id @default(autoincrement())
  firstName     String
  lastName      String
  accountNumber Int
  cardNumber    Int
  User          User   @relation(fields: [userId], references: [id])
  userId        Int
}
